<div><%= link_to 'Novo Requisito', new_system_requirement_path,
  class: "inline-block mt-6 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
</div>
  <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden">
  <thead class="bg-gray-100">
    <tr>
      <% ['Nome', 'Sistema Operacional', 'Armazenamento', 'Processador', 'Memória', 'Placa de Vídeo', '', '', ''].each do |header| %>
        <th class="text-left py-3 px-4 text-gray-700 font-semibold border-b border-gray-200">
          <%= header %>
        </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @system_requirements.each do |req| %>
      <tr class="hover:bg-gray-50">
        <td class="py-2 px-4 border-b border-gray-200">
          <%= req.name %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= req.operational_system %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= req.storage %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= req.processor %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= req.memory %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= req.video_board %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= link_to 'Mostrar', req, class: "text-blue-600 hover:underline" %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= link_to 'Editar', edit_system_requirement_path(req), class: "text-yellow-600 hover:underline" %>
        </td>
        <td class="py-2 px-4 border-b border-gray-200">
          <%= button_to 'Excluir', req, method: :delete, data: { confirm: 'Tem certeza?' },
            class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
